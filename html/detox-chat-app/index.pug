dom-module(id="detox-chat-app")
	link(rel="import" href="style.css" type="css")
	template
		#sidebar
			csw-tabs
				csw-button: button(type="button") Contacts
				csw-button: button(type="button") Profile
				csw-button(icon="cogs" tooltip="Settings"): button(type="button")
			csw-switcher
				detox-chat-app-sidebar-contacts(chat-id="[[chat-id]]")
				detox-chat-app-sidebar-profile(chat-id="[[chat-id]]")
				detox-chat-app-sidebar-settings(chat-id="[[chat-id]]")
			detox-chat-app-sidebar-status(chat-id="[[chat-id]]")
		detox-chat-app-dialogs(chat-id="[[chat-id]]")
	script(src="script.js")
