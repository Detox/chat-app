dom-module(id="detox-chat-app-sidebar-settings")
	link(rel="import" href="style.css" type="css")
	template
		csw-form: form
			label
				div Announce to the network*:
				csw-icon(mono icon="question" on-click="_help_settings_announce" tooltip="What is announcement?")
			csw-group
				csw-label-button(value="{{settings_announce}}"): label
					input(type="radio" value="0")
					| No
				csw-label-button: label
					input(type="radio" value="1")
					| Yes
			label
				div Block contact requests X days:
				csw-icon(mono icon="question" on-click="_help_settings_block_contact_requests_for" tooltip="What is blocking contacts requests?")
			csw-input-text: input(type="number" min="0" value="{{settings_block_contact_requests_for}}")
			label
				div Bootstrap nodes*:
				csw-icon(mono icon="question" on-click="_help_settings_bootstrap_nodes" tooltip="What are bootstrap nodes?")
			csw-textarea: textarea(rows="10" wrap="off" value="{{settings_bootstrap_nodes_string}}" on-blur="_settings_bootstrap_nodes_blur")
			label
				div DHT bucket size*:
				csw-icon(mono icon="question" on-click="_help_settings_bucket_size" tooltip="What is DHT bucket size?")
			csw-input-text: input(type="number" min="2" value="{{settings_bucket_size}}")
			label
				div ICE servers*:
				csw-icon(mono icon="question" on-click="_help_settings_ice_servers" tooltip="What are ICE servers?")
			csw-textarea: textarea(rows="10" wrap="off" value="{{settings_ice_servers_string}}" on-blur="_settings_ice_servers_blur")
			label
				div Max pending segments*:
				csw-icon(mono icon="question" on-click="_help_settings_max_pending_segments" tooltip="What are pending segments?")
			csw-input-text: input(type="number" min="1" value="{{settings_max_pending_segments}}")
			label
				div Number of intermediate nodes*:
				csw-icon(mono icon="question" on-click="_help_settings_number_of_intermediate_nodes" tooltip="What are intermediate nodes?")
			csw-input-text: input(type="number" min="1" value="{{settings_number_of_intermediate_nodes}}")
			label
				div Number of introduction nodes*:
				csw-icon(mono icon="question" on-click="_help_settings_number_of_introduction_nodes" tooltip="What are introduction nodes?")
			csw-input-text: input(type="number" min="1" value="{{settings_number_of_introduction_nodes}}")
			//- TODO: online
			label
				div Packets per second*:
				csw-icon(mono icon="question" on-click="_help_settings_packets_per_second" tooltip="What are packets per second?")
			csw-input-text: input(type="number" min="1" value="{{settings_packets_per_second}}")
		p.restart-warning * Changing these settings require application restart in order to take effect
	script(src="script.js")
