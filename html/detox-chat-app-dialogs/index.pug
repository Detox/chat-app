dom-module(id="detox-chat-app-dialogs")
	link(rel="import" href="style.css" type="css")
	template
		#contact-details(hidden="[[!active_contact]]") [[contact.nickname]]
		#messages-list(hidden="[[!active_contact]]")
			template(is="dom-repeat" items="{{messages}}" mutable-data)
				.message(right$="[[!item.from]]")
					.message-content [[item.text]]
					.message-details Written: [[_format_date(item.date_written)]], delivered: [[_format_date(item.date_sent)]]
		csw-form: form#send-form(hidden="[[!active_contact]]")
			//- TODO: autosize instead of fixed rows number
			csw-textarea: textarea(rows="7")
			csw-button: button(type="button" on-click="_send") Send
		div(hidden="[[active_contact]]")
			h4 Welcome to Detox Chat!
			p You can add contacts on the left panel and one you added someone, click on the name to start chatting.
	script(src="script.js")
