dom-module(id="detox-chat-app-dialogs")
	link(rel="import" href="style.css" type="css")
	template
		template(is="dom-if" if="[[active_contact]]")
			#messages-list
				template(is="dom-repeat" items="{{messages}}")
					p(right$="[[!item.0]]") [[item.2]]
			csw-form: form#send-form
				//- TODO: autosize instead of fixed rows number
				csw-textarea: textarea(rows="7")
				csw-button: button(type="button") Send
		template(is="dom-if" if="[[!active_contact]]")
			p Select a contact from the left menu
	script(src="script.js")
